<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service
            id="ivory.serializer.visitor.invalid"
            class="Ivory\Serializer\Visitor\Json\JsonSerializationVisitor"
            parent="ivory.serializer.visitor.serialization"
        >
            <tag name="ivory.serializer.visitor" direction="invalid" format="json" />
        </service>
    </services>
</container>
